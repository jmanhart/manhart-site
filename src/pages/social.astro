---
import BaseHead from "../components/BaseHead.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../config";
import Header from "../components/Header.astro";
---





<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style lang="scss">
      #social-page {
        .social-container {
          display: flex;
          flex-direction: column;
          gap: 0.75rem;
          padding: 1.5rem;
          max-width: 600px;
          margin: 0 auto;
        }

        .social-card {
          text-decoration: none;
          display: block;
          background: var(--surface100);
          border: 1px solid var(--divider);
          border-radius: 8px;
          padding: 1rem 1.25rem;
          transition: all 0.15s ease;
          cursor: pointer;

          &:hover {
            background: var(--surface200);
            transform: translateX(4px);
          }

          &:active {
            background: var(--surface300);
            transform: translateX(2px);
          }

          .social-name {
            font-size: 1rem;
            font-weight: 500;
            color: var(--text-primary);
            margin: 0;
          }
        }
      }
    </style>
  </head>

  <body>
    <Header />
    <div class="sub-page-wrapper" id="social-page">
      <div class="root-content text-page">
        <div class="info-container">
          <h2>Social Links</h2>
        </div>
        <div class="social-container" id="social-media-cards"></div>
      </div>
    </div>
    <script>
      const socialMediaAccounts = [

---
import BaseHead from "../components/BaseHead.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../config";
import Header from "../components/Header.astro";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <script src="../toggle-state.js"></script>
  </head>
  <style lang="scss">
    @import "../styles/_mixins.scss";
    header {
      @include sm {
        background-color: transparent;
        border-bottom: 0px;
        position: fixed;
        width: 100%;
        z-index: 999;
      }
      box-sizing: border-box;
      overflow-x: hidden;
      position: fixed;
      top: 0;
      width: 100%;
      padding: 1em;
      display: flex;
      justify-content: flex-end;
      border-bottom: 1px solid #e6e6e6;
    }
    .root-social-container {
      display: flex;
      flex-direction: column;
      gap: 1em;
    }
    .root-social-links {
      font-size: 1.5em;
      cursor: pointer;
    }
  </style>
  <body>
    <Header />
    <div class="root-wrapper" id="sub-page">
      <div class="root-content text-page">
        <div class="info-container">
          <h1>Social Links</h1>
        </div>
        <div class="root-social-container" id="social-media-cards"></div>
      </div>
    </div>
    <script>
      const socialMediaAccounts = [
        {
          name: "Chess.com",
          url: "https://www.chess.com/member/itsmanhart",
          icon: "dribbble",
        },
        {
          name: "Dribbble",
          url: "https://dribbble.com/manhart",
          icon: "dribbble",
        },
        {
          name: "Discogs",
          url: "https://www.discogs.com/user/manhartjohn",
          icon: "discogs",
        },
        {
          name: "Figma",
          url: "https://www.figma.com/@manhart",
          icon: "figma",
        },
        {
          name: "Github",
          url: "https://github.com/jmanhart",
        },
        {
          name: "Instagram",
          url: "https://github.com/jmanhart",
        },
        {
          name: "Letterboxd",
          url: "https://letterboxd.com/manhart/",
        },
        {
          name: "Linkedin",
          url: "https://www.linkedin.com/in/john-manhart/",
        },
        {
          name: "Twitter",
          url: "https://twitter.com/JohnManhart",
        },
        {
          name: "Twitch",
          url: "https://www.twitch.tv/itsmanhart",
        },
        {
          name: "Steam",
          url: "https://steamcommunity.com/id/ItsManhart/",
        },
        {
          name: "Strava",
          url: "https://www.strava.com/athletes/2083068",
        },
        {
          name: "Youtube",
          url: "https://www.youtube.com/channel/UCdgLTD7oNCCi5Y1sPVqDkwQ",
        },
      ];

      const employeeCards = socialMediaAccounts.map(function (account) {
        return `
        <a href="${account.url}" target="_blank" rel="noopener noreferrer">
            <span class="root-social-links">${account.name}</span>
        </a>
        `;
      });

      document.getElementById("social-media-cards").innerHTML =
        employeeCards.join("");

      const style = document.createElement("style");
      style.textContent = `

        .root-social-links {
          font-size: 1.5em;
          cursor: pointer;
        }
      `;
      document.head.appendChild(style);
    </script>
  </body>
</html>

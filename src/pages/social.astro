---
import BaseHead from "../components/BaseHead.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../config";
import Header from "../components/Header.astro";
---





<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style lang="scss">
      #sub-page {
        .root-social-container {
          display: flex;
          flex-direction: column;
          gap: 1em;
        }

        #social-media-cards {
          .social-link {
            text-decoration: none;
            display: block;
          }

          .social-link-container {
            background-color: var(--surface200) !important;
            border: 1px solid var(--divider) !important;
            border-radius: 0.5em;
            padding: 1em;
            transition: all 0.2s ease;
            cursor: pointer;

            &:hover {
              background-color: var(--surface300) !important;
              transform: translateX(4px);
            }
          }

          .root-social-links {
            font-size: 1.2em;
            color: var(--text-primary);
            text-decoration: none;
            display: block;
          }
        }
      }
    </style>
  </head>

  <body>
    <Header />
    <div class="sub-page-wrapper" id="sub-page">
      <div class="root-content text-page">
        <div class="info-container">
          <h2>Social Links</h2>
        </div>
        <div class="root-social-container" id="social-media-cards"></div>
      </div>
    </div>
    <script>
      const socialMediaAccounts = [
        {
          name: "Bluesky",
          url: "https://staging.bsky.app/profile/manhart.bsky.social",
          icon: "bluesky",
        },
        {
          name: "Chess.com",
          url: "https://www.chess.com/member/harthartman",
          icon: "dribbble",
        },
        {
          name: "Dribbble",
          url: "https://dribbble.com/manhart",
          icon: "dribbble",
        },
        {
          name: "Discogs",
          url: "https://www.discogs.com/user/manhartjohn",
          icon: "discogs",
        },
        {
          name: "Figma",
          url: "https://www.figma.com/@manhart",
          icon: "figma",
        },
        {
          name: "Github",
          url: "https://github.com/jmanhart",
        },
        {
          name: "Instagram",
          url: "https://github.com/jmanhart",
        },
        {
          name: "Letterboxd",
          url: "https://letterboxd.com/manhart/",
        },
        {
          name: "Linkedin",
          url: "https://www.linkedin.com/in/john-manhart/",
        },
        {
          name: "Read.cv",
          url: "https://read.cv/manhart",
        },
        {
          name: "Steam",
          url: "https://steamcommunity.com/id/ItsManhart/",
        },
        {
          name: "Strava",
          url: "https://www.strava.com/athletes/2083068",
        },
        {
          name: "Twitter",
          url: "https://twitter.com/JohnManhart",
        },
        {
          name: "Threads",
          url: "https://www.threads.net/@johnmanhart",
        },
        {
          name: "Twitch",
          url: "https://www.twitch.tv/itsmanhart",
        },
        {
          name: "Youtube",
          url: "https://www.youtube.com/channel/UCdgLTD7oNCCi5Y1sPVqDkwQ",
        },
      ];

      const employeeCards = socialMediaAccounts.map(function (account) {
        return `
          <a href="${account.url}" target="_blank" rel="noopener noreferrer" class="social-link">
            <div class="social-link-container">
              <span class="root-social-links">${account.name}</span>
            </div>
          </a>
        `;
      });

      const socialCardsContainer = document.getElementById("social-media-cards");
      if (socialCardsContainer) {
        socialCardsContainer.innerHTML = employeeCards.join("");
      }
    </script>
  </body>
</html>




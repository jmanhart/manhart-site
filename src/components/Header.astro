<style lang="scss">
  @import "../styles/_mixins.scss";
  header {
    @include sm {
      background-color: transparent;
      border-bottom: 0px;
      position: fixed;
      width: 100%;
      z-index: 999;
    }
    box-sizing: border-box;
    overflow-x: hidden;
    position: fixed;
    top: 0;
    background-color: white;
    width: 100%;
    padding: 1em;
    display: flex;
    justify-content: flex-end;
    border-bottom: 1px solid #e6e6e6;
  }
  h2 {
    margin: 0.5em 0;
  }
  nav {
    box-sizing: content-box;
    display: flex;
    width: 100%;
    align-items: center;
    justify-content: space-between;
  }
  .personal-logo {
    width: 24px;
    height: 24px;
    background-color: gray;
  }

  html[theme="light"] {
    background-color: white;
    color: black;
  }

  html[theme="dark"] {
    background-color: rgb(35, 35, 35);
    color: white;
  }

// This component demonstrates how to use Sentry profiling
---

<div class="profiler-demo">
  <div class="profiler-header">
    <h3>ðŸ“Š Sentry Profiling Demo</h3>
    <p>Check your browser console and Sentry dashboard for profiling data.</p>
  </div>
  
  <div class="profiler-buttons">
    <button id="profile-button" class="profile-btn">Run Profiled Function</button>
    <button id="profile-async-button" class="profile-btn">Run Profiled Async Function</button>
  </div>
</div>

<script>
  import { profileFunction, profileAsyncFunction, profileComponentRender } from '../utils/sentry';

  // Example 1: Profile a synchronous function
  document.getElementById('profile-button')?.addEventListener('click', () => {
    const result = profileFunction('Button Click Handler', 'ui.interaction', () => {
      // Simulate some work
      let sum = 0;
      for (let i = 0; i < 1000000; i++) {
        sum += i;
      }
      console.log('Profiled function result:', sum);
      return sum;
    });
  });

  // Example 2: Profile an asynchronous function
  document.getElementById('profile-async-button')?.addEventListener('click', async () => {
    const result = await profileAsyncFunction('Async Button Click Handler', 'ui.interaction', async () => {
      // Simulate async work
      await new Promise(resolve => setTimeout(resolve, 1000));
      console.log('Profiled async function completed');
      return 'async result';
    });
  });

  // Example 3: Profile component render (this would typically be in your component logic)
  profileComponentRender('SentryProfiler');
</script>

<style lang="scss">

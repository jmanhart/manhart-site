---
import "../styles/global.scss";

const { pathname } = Astro.url;
const hideOnPaths = ['/']; // Paths where the button should be hidden
const shouldHideButton = hideOnPaths.includes(pathname);
import BackArrow from "../components/icons/BackArrow.astro";
---

{!shouldHideButton && (
  <div class="back-button" onclick="window.history.back()">       
    {/* <img src="/Backarrow.svg"/> */}
    <BackArrow width="32" height="32" color="gray" />

    </div>
)}

<style>
    .back-button {
    position: fixed;
    top: 0;
    left: 0;
    padding: 1em;
    }

</style>
---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import TextStyleButton from "../components/TextStyleButton.astro";

export interface Props {
  content: {
    title: string;
    description: string;
    pubDate?: string;
    updatedDate?: string;
    heroImage?: string;
    location?: string;
    weather?: string;
   
  };
}

const {
  content: {
    title,
    description,
    pubDate,
    updatedDate,
    heroImage,
    location,
    weather,
    
  },
} = Astro.props;


---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>

  <body>
    <Header />
    <div class="sub-page-wrapper" id="sub-page">
      <div class="root-content text-page">
        <main>
          <article>
            {
              heroImage && (
                <img width={720} height={360} src={heroImage} alt="" />
              )
            }
            <h2 class="title">{title}</h2>
            {
              pubDate && (
                <div class="secondary-info-container">
                  <h4>
                    {pubDate} <span class="divider">|</span> {location}{" "}
                    {weather}  
                  </h4>
                </div>
              )
            }
            
            {
              updatedDate && (
                <div>
                  Last updated on <time>{updatedDate}</time>
                </div>
              )
            }
            <slot />
          </article>
        </main>
      </div>
    </div>
    <style>
      /* .title {
        font-size: 2em;
        margin: 0.25em 0 0;
      } */
      hr {
        border-top: 1px solid #ddd;
        margin: 1rem 0;
      }
      .secondary-info-container {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        align-items: flex-start;
        margin: 0 0 0.5em 0;
      }
    </style>
  </body>
</html>

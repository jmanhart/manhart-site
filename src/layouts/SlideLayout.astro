---
export interface Props {
  title: string;
  authors: string[];
  description?: string;
}

import BaseHead from "../components/BaseHead.astro";
import "../styles/reveal-theme-config.scss";

const { title, authors, description } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <BaseHead title={title} description={description || title} />
  {description && <meta name="description" content={description} />}
  {authors.map((author) => <meta name="author" content={author} />)}
  
  <!-- Reveal.js styles -->
  <link rel="stylesheet" href="/revealjs/reveal.css">
  <link rel="stylesheet" href="/revealjs/theme/custom.css">
  
  <style>
    body {
      margin: 0;
      padding: 0;
      overflow: hidden;
    }

    .rubber-duck{
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
    }

    .reveal {
      font-family: system-ui, -apple-system, sans-serif;
    }

    .reveal .slides section {
      text-align: left;
      padding: 2rem;
      display: flex;
    }

    .reveal h1 {
      font-size: 2.5rem;
      margin-bottom: 1rem;
    }

    .reveal h2 {
      font-size: 10rem;
      margin-bottom: 0.5rem;
    }

    .reveal p {
      font-size: 1.2rem;
      line-height: 1.6;
    }
  </style>
</head>
<body>
  <div class="reveal">
    <div class="slides">
      <slot />
    </div>
  </div>
</body>
</html>

<!-- Reveal.js JavaScript -->
<script src="/revealjs/reveal.js" is:inline></script>
<script>
  // Wait for DOM to be ready
  document.addEventListener('DOMContentLoaded', function() {
    // Initialize Reveal.js
    // @ts-ignore - Reveal is loaded from external script
    let deck = new Reveal({
      controls: true,
      progress: true,
      center: true,
      hash: true,
      transition: 'slide',
      backgroundTransition: 'fade'
    });

    deck.initialize();

    // Optional: Add custom keyboard shortcuts
    deck.addKeyBinding('n', 'NEXT');
    deck.addKeyBinding('p', 'PREVIOUS');
  });
</script>

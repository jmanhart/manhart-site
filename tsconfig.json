{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "jsx": "preserve", // Use "preserve" to ensure Astro and React coexist properly
    "module": "ESNext", // Use "ESNext" for better compatibility with Vite
    "moduleResolution": "Node", // Use "Node" to avoid path issues
    "target": "ESNext",
    "outDir": "dist",
    "baseUrl": "./src", // Use baseUrl instead of rootDir to avoid looking in nested directories
    "strict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts", "src/**/*.astro"],
  "exclude": ["node_modules", "dist"]
}
